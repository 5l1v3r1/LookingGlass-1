<div id="editable-bar" class="row unedited">
    <div class="col-md-6 title">
        <i class="icon-logo"></i>
        Data Editor
    </div>
    <div class="col-md-6 text-right">
        <button class="pull-right btn btn-sm" id="button-editable-action">
           Start Editing
        </button>
        <button class="pull-right btn btn-sm add-right hide" id="button-editable-discard">
           Discard Changes
        </button>
    </div>
</div>

<!-- Displays fields on the text pane -->
<%= show_by_type("Picture", doc, @dataspec) %>

<%= show_by_type("Title", doc, @dataspec, "show") %>
<%= show_by_type("Source Link", doc, @dataspec, "show") %>

<%= show_by_type("Short Text", doc, @dataspec, "show") %>

<%= show_by_type("Date", doc, @dataspec, "show") %>
<%= show_by_type("DateTime", doc, @dataspec, "show") %>
<%= show_by_type("Number", doc, @dataspec, "show") %>

<%= show_by_type("Tiny Text", doc, @dataspec, "show") %>
<%= show_by_type("Shorter Text", doc, @dataspec, "show") %>
<%= show_by_type("Category", doc, @dataspec, "show-text") if is_item_field %>

<%= show_by_type("Description", doc, @dataspec, "show") %>
<%= show_by_type("Long Text", doc, @dataspec, "show") %>

<div class="row mt-5">
    <% if is_data_for_type?("Related Link", doc, @dataspec) %>
    <div class="col-md-6">
        <%= show_by_type("Related Link", doc, @dataspec, "show") %>
    </div>
    <% end %>
    <% if is_data_for_type?("Named Link", doc, @dataspec) %>
    <div class="col-md-6">
        <%= show_by_type("Named Link", doc, @dataspec, "show") %>
    </div>
    <% end %>
</div>
<% if is_data_for_type?("Child Document Link", doc, @dataspec) %>
<div class="row mt-5">
    <div class="col-md-12">
    <%= show_by_type("Child Document Link", doc, @dataspec, "show") %>
    </div>
</div>
<% end %>
