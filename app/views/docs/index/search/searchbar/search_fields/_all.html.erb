<!-- Search all fields -->
<%= form_tag search_path, method: 'get', id: 'form-search-all', class: 'navbar-form navbar-left input-group-addon' do %>
  <div class="input-group">
    <input type="text"
           name="q"
           value="<%= params[:q] %>"
           id="q"
           class="form-control searchin"
           autofocus="autofocus" placeholder="Search all fields">
    <%= render partial: 'docs/index/search/searchbar/search_fields/search_button', locals: {fieldname: "q"} %>
  </div>
<% end %>
