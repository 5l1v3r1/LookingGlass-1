<%= form_tag search_path, method: 'get', id: 'form-search-string', class: 'navbar-form navbar-left input-group-addon hide' do %>
<div class="input-group">
    <input type="text"
           name="<%= fieldname %>"
           value="<%= params[fieldname.to_sym]%>"
	       class="form-control" autofocus="autofocus" placeholder="Search" />
    <%= render partial: 'docs/index/search/searchbar/search_fields/search_button', locals: {fieldname: fieldname} %>
</div>
<% end %>
