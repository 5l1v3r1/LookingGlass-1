<!-- Only show search bar on index action -->
<% if ['index'].include?(action_name) %>
  <%= render partial: "docs/queries/dropdown/dropdown" %>

  <!-- Render forms for different types of queries -->
  <%= render partial: 'docs/queries/search_fields/allquery' %>
  <%= render partial: 'docs/queries/search_fields/stringquery', locals: {fieldname: 'stringquery', hrname: 'Query' } %>
  <%= render partial: 'docs/queries/search_fields/datequery', locals: {
      fieldname: 'datequery',
      start_date: 'start_date',
      end_date: 'end_date' }
  %>
<% end %>
