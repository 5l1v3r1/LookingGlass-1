<%= form_tag search_path, method: 'get', id: 'form-search-string', class: 'navbar-form navbar-left input-group-addon hide' do %>
  <input type="text" name="<%= fieldname %>"
	 value="<%= params[fieldname.to_sym]%>"
	 autofocus="autofocus" class="form-control searchin" placeholder="Search" />
  <%= render partial: 'docs/queries/search_fields/search_button', locals: {fieldname: fieldname} %>
<% end %>
