<%= form_tag search_path, method: 'get' do %>
<div class="searchin" style="display: none" id="<%= fieldname %>">
<input type="text" data-behaviour='datepicker' name="<%= start_date %>">
 - 
<input type="text" data-behaviour='datepicker' name="<%= end_date %>">
<button type="submit">Search</button>
</div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker();
  })
</script>

