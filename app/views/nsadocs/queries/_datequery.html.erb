<% field_names = "" %>
<% @field_info.each do |f| %>
  <% if fieldname == f["Field Name"] %>
    <% field_names = f["Form Params"] %>
  <% end %>
<% end %>


<%= form_tag search_path, method: 'get' do %>
<div class="searchin" style="display: none" id="<%= fieldname %>">
<input type="text" data-behaviour='datepicker' name="<%= field_names[0] %>">
 - 
<input type="text" data-behaviour='datepicker' name="<%= field_names[1] %>">
<button type="submit">Search</button>
</div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker();
  })
</script>

