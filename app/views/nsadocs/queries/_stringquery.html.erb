  <input type="text" name="<%= fieldname %>" value="<%= params[fieldname.to_sym]%>" id="<%= fieldname %>"
  autofocus="autofocus" class="form-control searchin" placeholder="Search <%= hrname.pluralize %>" style="display:none" />
<% end %>