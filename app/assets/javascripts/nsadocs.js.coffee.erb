  $("#docs").dataTable dom: 'C<"clear">Rlfrtip', bFilter: false, order: [[0, "desc"]], destroy: true, columnDefs: <%= File.read("app/dataspec/hidecolumns.json") %>
  return

data = <%= File.read("app/dataspec/nsadata.json") %>

jQuery ->
  $('#ftypes').change ->
    chosen = $('#ftypes :selected').text()
    for f in data
      if chosen == f["Human Readable Name"]
        $('.searchin').hide()
        $('#'+f["Field Name"]).show()
    if chosen == "All"
      $('.searchin').hide()
      $('#q').show()

